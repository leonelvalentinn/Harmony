---
import 'photoswipe/style.css';

const GALLERY_IMAGES = [
  {
    id: 1,
    alt: "",
    width: 1600,
    height: 1200,
    span: "col-span-4",
  },
  {
    id: 2,
    alt: "",
    width: 1200,
    height: 1600,
    span: "col-span-6",
  },
  {
    id: 3,
    alt: "",
    width: 1600,
    height: 1200,
    span: "col-span-6",
  },
  {
    id: 4,
    alt: "",
    width: 1200,
    height: 1600,
    span: "col-span-4",
  },
  {
    id: 5,
    alt: "",
    width: 1600,
    height: 1200,
    span: "col-span-6",
  },
  {
    id: 6,
    alt: "",
    width: 1200,
    height: 1600,
    span: "col-span-4",
  },
]
---

<div class="w-full grid grid-cols-10 auto-rows-[10rem] gap-4 place-content-center md:auto-rows-[10rem]" id="gallery">
  {
    Array.from({ length: 6 }).map((_, i) => (
    <a 
      class={`rounded-xl shadow-xl overflow-hidden ${GALLERY_IMAGES[i].span} img-c transition-shadow aspect-auto`}
      href={`/odonto-${i + 1}.jpeg`} 
      data-cropped="true"
      data-pswp-width={`${GALLERY_IMAGES[i].width}`} 
      data-pswp-height={`${GALLERY_IMAGES[i].height}`}
      target="_blank"
    >
      <img 
        src={`/odonto-${i + 1}.webp`}
        alt={GALLERY_IMAGES[i].alt}
        loading="lazy"
        class="rounded-lg relative object-cover w-full h-full"
      >
    </a>
    ))
  }
</div>

<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';

  const lightbox = new PhotoSwipeLightbox({
    gallery: '#gallery',
    children: 'a',
    pswpModule: () => import('photoswipe'), 
  });
  lightbox.init();
  </script>

  <style>
    .img-c {
    transition: all 0.2s ease-in-out;
  }
  .img-c:hover {
    -webkit-box-shadow: 0px 0px 27px 17px rgba(219, 115, 212, 0.65);
    -moz-box-shadow: 0px 0px 27px 17px rgba(219, 115, 212, 0.65);
    box-shadow: 0px 0px 27px 17px rgba(219, 115, 212, 0.65);
    transition: all 0.2s ease-in-out;
  }
</style>