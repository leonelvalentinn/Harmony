    background: linear-gradient(45deg, var(--gold-100), var(--gold-200));
    color: white;
  }
  @keyframes showMenu {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0%);
    }
  }
  @keyframes hideMenu {
    0% {
      transform: translate(0%);
    }
    100% {
      transform: translate(-100%);
    }
  }
  @media (min-width: 768px) {
